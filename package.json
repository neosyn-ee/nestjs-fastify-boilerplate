{
  "name": "nestjs-fastify-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build-prod": "NODE_ENV=production nest build",
    "build-develop": "NODE_ENV=development nest build",
    "build-uat": "NODE_ENV=uat nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:pull:dev": "dotenv -e .env.development -- npx prisma db pull",
    "prisma:pull:uat": "dotenv -e .env.uat -- npx prisma db pull",
    "prisma:pull:prod": "dotenv -e .env.production -- npx prisma db pull",
    "prisma:generate:dev": "dotenv -e .env.development -- npx prisma generate",
    "prisma:migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev --name init",
    "prisma:migrate:uat": "dotenv -e .env.uat -- npx prisma migrate dev --name init",
    "prisma:migrate:prod": "dotenv -e .env.production -- npx prisma migrate dev --name init",
    "prisma:seed:dev": "dotenv -e .env.development -- ts-node prisma/seed.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@nestjs-cls/transactional": "^2.4.2",
    "@nestjs-cls/transactional-adapter-prisma": "^1.2.4",
    "@nestjs/class-validator": "^0.13.4",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.4.1",
    "@nestjs/swagger": "^7.4.2",
    "@prisma/client": "^5.21.1",
    "class-transformer": "^0.5.1",
    "colors": "^1.4.0",
    "nestjs-cls": "^4.4.1",
    "nestjs-prisma": "^0.23.0",
    "printf": "^0.6.1",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "^10.0.0",
    "winston": "^3.15.0",
    "winston-loki": "^6.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "class-validator": "^0.14.1",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.6",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.10",
    "pg": "^8.13.0",
    "prettier": "^3.0.0",
    "prisma": "^5.21.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}